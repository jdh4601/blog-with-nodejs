<div>
	<h2>
		About
	</h2>
	<section class="section title">
			<strong><%= name %></strong><br>
			Email: <%= email %> <br>
			Phone: <%= phone %> <br>
			Location: <%= location %>
	</section>

	 <section class="section experience">
			<h3>Experience</h3>
			<% experiences.forEach(function(exp) { %>
					<div class="job">
							<div class="job-title">
									<strong><%= exp.title %> </strong>
									<span class="date"><%= exp.startDate %> - <%= exp.endDate %></span><br>
									<span class="details"><%= exp.company %></span>
									
							</div>
							<ul class="job-details">
									<% exp.responsibilities.forEach(function(responsibility) { %>
											<li><%= responsibility %></li>
									<% }); %>
							</ul>
					</div>
			<% }); %>
	</section>

	<section class="section projects">
			<h3>Projects</h3>
			<% projects.forEach(function(project) { %>
					<div class="project">
							<div class="project-title">
								<strong><%= project.name %></strong>
									<% if (project.link) { %>
											<a href="<%= project.link %>" target="_blank">(Link)</a>
									<% } %>
									<span class="date"><%= project.startDate %> - <%= project.endDate %></span>
							</div>
							
							<div class="project-details">
								<ul class="details">
									<% project.description.forEach(function(desc) { %>
										<li><%= desc %></li>
									<% }); %>
								</ul>
								<strong>Technologies: </strong> <%= project.technologies.join(', ') %>
							</div>
					</div>
			<% }); %>
	</section>

	<section class="section education">
			<h3>Education</h3>
			<% education.forEach(function(edu) { %>
					<div class="education">
							<div class="education-title">
								<strong><%= edu.institution %></strong>
								<span class="date"><%= edu.startDate %> - <%= edu.endDate %></span><br>
								<span class="details"><%= edu.degree %></span>
							</div>
							<div class="education-details">
									<% if (edu.gpa) { %>
											<p>GPA: <%= edu.gpa %></p>
									<% } %>
							</div>
					</div>
			<% }); %>
	</section>

	<section class="section certifications">
			<h3>Certifications</h3>
			<% certifications.forEach(function(cert) { %>
					<div class="certification">
							<div class="certification-title">
								<strong><%= cert.name %></strong>
								<span class="date"><%= cert.dateEarned %></span><br>
								<span class="details"><%= cert.organization %></span>
							</div>
							<% if (cert.link) { %>
							  	<a href="<%= cert.link %>" target="_blank">(Link)</a>
									<% } %>
							<% if (cert.validUntil) { %>
									<div class="certification-details">
											<p>Valid Until: <%= cert.validUntil %></p>
									</div>
							<% } %>
					</div>
			<% }); %>
	</section>
</div>