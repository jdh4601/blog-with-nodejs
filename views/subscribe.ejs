	<script>
    document
      .getElementById('mc-embedded-subscribe-form')
      .addEventListener('submit', function (e) {
        e.preventDefault(); // Prevent default form submission

        // Get the form data
        const form = e.target;
        const formData = new FormData(form);

        // Submit the form data to Mailchimp
        fetch(form.action, {
          method: 'POST',
          body: formData,
          mode: 'no-cors',
        })
          .then(() => {
            // Show popup window after successful submission
            const popupWindow = window.open(
              '/success',
              'PopupWindow',
            );

            // setTimeout(() => {
            //   if (popupWindow) {
            //     popupWindow.close();
            //   }
            //   // Redirect or reset form if needed
            //   form.reset();
            // }, 6000);
          })
          .catch(error => {
            console.error('Error:', error);
          });
      });
  </script>
