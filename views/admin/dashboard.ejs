<div class="admin-sections">
  <div class="admin-section">
    <div class="admin-title">
      <h2>Posts</h2>
      <a href="/add-post" class="button">+ Add New</a>
    </div>

    <ul class="admin-posts">
      <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %> "> <%= post.title %> </a>
        <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
          <form
            action="/delete-post/<%= post._id %>?_method=DELETE"
            method="POST"
          >
            <input type="submit" value="Delete" class="btn-delete btn" />
          </form>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>

  <div class="admin-section">
    <div class="admin-title">
      <h2>About Page</h2>
      <a href="/edit-about" class="button">Edit Information</a>
    </div>
    <div class="admin-about-info">
      <p>
        Edit your personal information, experience, projects, education, and
        certifications displayed on the About page.
      </p>
    </div>
  </div>
</div>
